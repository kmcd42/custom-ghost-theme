{{!< default}}
{{!--
    HOMEPAGE - "Warmth at the Edge of Tomorrow"
    A living, breathing introduction. Not just a landing page.
    Bento-box layout with personality and pathways.
--}}

<div class="home-universe">
    {{!-- Hero Section: The Opening Statement --}}
    <section class="home-hero">
        <div class="home-hero-content">
            {{#if @custom.show_homepage_tagline}}
                <span class="home-hero-eyebrow kinetic-text">{{@site.title}}</span>
            {{/if}}

            {{#if @site.description}}
                <h1 class="home-hero-statement kinetic-text">{{@site.description}}</h1>
            {{/if}}

            <div class="home-hero-meta">
                <span class="home-hero-location">Wellington, Aotearoa</span>
                <span class="home-hero-roles">Designer / Writer / Marketer</span>
            </div>
        </div>

        {{!-- Floating decorative image --}}
        {{#if @site.cover_image}}
        <div class="home-hero-image">
            <img
                srcset="{{img_url @site.cover_image size="s"}} 400w,
                        {{img_url @site.cover_image size="m"}} 720w,
                        {{img_url @site.cover_image size="l"}} 1200w"
                sizes="(max-width: 768px) 80vw, 35vw"
                src="{{img_url @site.cover_image size="l"}}"
                alt=""
                loading="eager"
            />
        </div>
        {{/if}}
    </section>

    {{!-- Bento Grid: Pathways into the site --}}
    <section class="home-bento">
        <div class="home-bento-grid">
            {{!-- Featured Work Card - Large --}}
            <a href="/portfolio/" class="home-bento-card home-bento-featured reveal-on-scroll">
                <div class="home-bento-card-bg">
                    {{#get "posts" filter="tag:portfolio" limit="1" include="tags"}}
                        {{#foreach posts}}
                            {{#if feature_image}}
                                <img
                                    src="{{img_url feature_image size="l"}}"
                                    alt=""
                                    loading="lazy"
                                />
                            {{/if}}
                        {{/foreach}}
                    {{/get}}
                </div>
                <div class="home-bento-card-content">
                    <span class="home-bento-label">Portfolio</span>
                    <h2 class="home-bento-title">See my work</h2>
                    <p class="home-bento-desc">Design, branding, and creative projects</p>
                </div>
                <div class="home-bento-arrow">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M7 17L17 7M17 7H7M17 7V17"/>
                    </svg>
                </div>
            </a>

            {{!-- Blog/Writing Card --}}
            <a href="/blog/" class="home-bento-card home-bento-writing reveal-on-scroll">
                <div class="home-bento-card-content">
                    <span class="home-bento-label">Writing</span>
                    <h3 class="home-bento-title">Read my thoughts</h3>
                    {{#get "posts" filter="tag:-portfolio" limit="1"}}
                        {{#foreach posts}}
                            <p class="home-bento-latest">Latest: {{title}}</p>
                        {{/foreach}}
                    {{/get}}
                </div>
                <div class="home-bento-decoration">
                    <span class="home-bento-quote">"</span>
                </div>
            </a>

            {{!-- About Card --}}
            <a href="/about/" class="home-bento-card home-bento-about reveal-on-scroll">
                <div class="home-bento-card-content">
                    <span class="home-bento-label">About</span>
                    <h3 class="home-bento-title">Who I am</h3>
                    <p class="home-bento-desc">The story so far</p>
                </div>
                <div class="home-bento-avatar">
                    {{#if @site.icon}}
                        <img src="{{@site.icon}}" alt="" loading="lazy" />
                    {{else}}
                        <span>K</span>
                    {{/if}}
                </div>
            </a>

            {{!-- Photography Card --}}
            <a href="/photography/" class="home-bento-card home-bento-photos reveal-on-scroll">
                <div class="home-bento-card-bg home-bento-photo-grid">
                    {{#get "posts" filter="tag:photography" limit="4" include="tags"}}
                        {{#foreach posts}}
                            {{#if feature_image}}
                                <img
                                    src="{{img_url feature_image size="s"}}"
                                    alt=""
                                    loading="lazy"
                                />
                            {{/if}}
                        {{/foreach}}
                    {{/get}}
                </div>
                <div class="home-bento-card-content">
                    <span class="home-bento-label">Photography</span>
                    <h3 class="home-bento-title">Through my lens</h3>
                </div>
            </a>

            {{!-- Now Card - What I'm up to --}}
            <a href="/now/" class="home-bento-card home-bento-now reveal-on-scroll">
                <div class="home-bento-card-content">
                    <span class="home-bento-label">Now</span>
                    <h3 class="home-bento-title">What I'm doing</h3>
                    <p class="home-bento-desc">Current focus & interests</p>
                </div>
                <div class="home-bento-pulse"></div>
            </a>

            {{!-- Colophon Card --}}
            <a href="/colophon/" class="home-bento-card home-bento-colophon reveal-on-scroll">
                <div class="home-bento-card-content">
                    <span class="home-bento-label">Colophon</span>
                    <h3 class="home-bento-title">How this works</h3>
                    <p class="home-bento-desc">The craft behind the site</p>
                </div>
                <div class="home-bento-tech">
                    <span>Ghost</span>
                    <span>RSS</span>
                    <span>Open Web</span>
                </div>
            </a>

            {{!-- Links Card --}}
            <a href="/links/" class="home-bento-card home-bento-links reveal-on-scroll">
                <div class="home-bento-card-content">
                    <span class="home-bento-label">Links</span>
                    <h3 class="home-bento-title">Find me elsewhere</h3>
                </div>
                <div class="home-bento-social-icons">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z" fill="currentColor"/></svg>
                </div>
            </a>
        </div>
    </section>

    {{!-- Featured/Recent Section --}}
    <section class="home-featured">
        <div class="home-featured-header">
            <h2 class="home-featured-title">Recent Work & Writing</h2>
            <a href="/blog/" class="home-featured-link">View all</a>
        </div>

        <div class="home-featured-grid">
            {{#get "posts" limit="4" include="tags,authors"}}
                {{#foreach posts}}
                    <article class="home-featured-card reveal-on-scroll">
                        {{#if feature_image}}
                        <a href="{{url}}" class="home-featured-image">
                            <img
                                src="{{img_url feature_image size="m"}}"
                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                loading="lazy"
                            />
                        </a>
                        {{/if}}
                        <div class="home-featured-content">
                            {{#if primary_tag}}
                                <span class="home-featured-tag">{{primary_tag.name}}</span>
                            {{/if}}
                            <h3 class="home-featured-card-title">
                                <a href="{{url}}">{{title}}</a>
                            </h3>
                            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                        </div>
                    </article>
                {{/foreach}}
            {{/get}}
        </div>
    </section>

    {{!-- Subscribe Section --}}
    {{#if @site.members_enabled}}
    <section class="home-subscribe reveal-on-scroll">
        <div class="home-subscribe-content">
            <h2 class="home-subscribe-title">Stay curious</h2>
            <p class="home-subscribe-desc">Get occasional updates on new work and writing. No spam, just genuine sharing.</p>
            <a href="#/portal/signup" class="home-subscribe-btn" data-portal="signup">
                <span>Subscribe</span>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    </section>
    {{/if}}
</div>

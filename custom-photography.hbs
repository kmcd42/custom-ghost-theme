{{!< default}}
{{!--
Template Name: Photography
Description: Full-width gallery template with editorial header and immersive image viewing
Perfect for photography portfolios, visual essays, and image-heavy content
--}}

{{#post}}
<article class="post-content photography-layout {{post_class}}">

    {{!-- Editorial Header --}}
    <header class="photography-header">
        <div class="photography-header-inner">
            <h1 class="photography-title">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="photography-excerpt">{{custom_excerpt}}</p>
            {{/if}}
            {{#if tags}}
                <div class="photography-tags">
                    {{#foreach tags}}
                        {{#unless internal}}
                            <a href="{{url}}" class="photography-tag">{{name}}</a>
                        {{/unless}}
                    {{/foreach}}
                </div>
            {{/if}}
            {{!-- Meta info --}}
            <div class="photography-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
                {{#if reading_time}}
                    <span class="photography-meta-separator">Â·</span>
                    <span>{{reading_time}} min read</span>
                {{/if}}
            </div>
        </div>
    </header>

    {{!-- Full-width content with galleries --}}
    <div class="photography-body gh-content">
        {{content}}
    </div>

    {{!-- Share & Navigation --}}
    <footer class="photography-footer">
        <div class="photography-footer-inner">
            {{!-- Share links --}}
            <div class="photography-share">
                <span class="photography-share-label">Share</span>
                <div class="photography-share-links">
                    <a href="https://twitter.com/intent/tweet?url={{url absolute="true"}}&text={{encode title}}" target="_blank" rel="noopener" aria-label="Share on Twitter">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                    </a>
                    <a href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}" target="_blank" rel="noopener" aria-label="Share on LinkedIn">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"/>
                        </svg>
                    </a>
                </div>
            </div>

            {{!-- Back to portfolio --}}
            <a href="/portfolio" class="photography-back">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                <span>Back to Portfolio</span>
            </a>
        </div>
    </footer>

</article>
{{/post}}

{{!< default}}
{{!--
Template Name: Photography
Description: Full-width gallery template with editorial header and immersive image viewing
Perfect for photography portfolios, visual essays, and image-heavy content
--}}

{{#post}}
<article class="post-content photography-layout {{post_class}}">

    {{!-- Editorial Header --}}
    <header class="photography-header">
        <div class="photography-header-inner">
            <h1 class="photography-title">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="photography-excerpt">{{custom_excerpt}}</p>
            {{/if}}
            {{#if tags}}
                <div class="photography-tags">
                    {{#foreach tags}}
                        {{#unless internal}}
                            <a href="{{url}}" class="photography-tag">{{name}}</a>
                        {{/unless}}
                    {{/foreach}}
                </div>
            {{/if}}
            {{!-- Meta info --}}
            <div class="photography-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
                {{#if reading_time}}
                    <span class="photography-meta-separator">Â·</span>
                    <span>{{reading_time}}</span>
                {{/if}}
            </div>
        </div>
    </header>

    {{!-- Full-width content with galleries --}}
    <div class="photography-body gh-content">
        {{content}}
    </div>

    {{!-- Navigation --}}
    <footer class="photography-footer">
        <div class="photography-footer-inner">
            <a href="/photography/" class="photography-back">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                <span>Back to Photography</span>
            </a>
        </div>
    </footer>

</article>
{{/post}}

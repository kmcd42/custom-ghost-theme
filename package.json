{
    "name": "warmth-tomorrow",
    "description": "A fashion-forward, empathetic design system for Kasey McDonnell. Curious, compassionate, and focused on making great work that resonates.",
    "version": "2.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "author": {
        "name": "Kasey McDonnell",
        "email": "hello@kaseymcdonnell.co.nz",
        "url": "https://kaseymcdonnell.co.nz"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Portfolio",
            "Magazine",
            "Photography"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "portfolio",
        "designer",
        "creative",
        "editorial",
        "climate"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xxs": {
                "width": 50
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            },
            "xxl": {
                "width": 2800
            }
        },
        "card_assets": {
            "exclude": ["audio", "video", "product", "signup"]
        },
        "custom": {
            "site_mood": {
                "type": "select",
                "options": [
                    "Midnight (Deep & Warm)",
                    "Dawn (Soft & Hopeful)",
                    "Ocean (Teal & Contemplative)"
                ],
                "default": "Midnight (Deep & Warm)",
                "group": "design"
            },
            "accent_style": {
                "type": "select",
                "options": [
                    "Warm Amber",
                    "Soft Copper",
                    "Climate Teal"
                ],
                "default": "Warm Amber",
                "group": "design"
            },
            "typography_style": {
                "type": "select",
                "options": [
                    "Editorial (Serif headlines)",
                    "Modern (Sans-serif headlines)",
                    "Mixed (Serif body, sans headlines)"
                ],
                "default": "Editorial (Serif headlines)",
                "group": "design"
            },
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Floating Glass",
                    "Minimal Line",
                    "Bold Statement"
                ],
                "default": "Floating Glass",
                "group": "design"
            },
            "homepage_style": {
                "type": "select",
                "options": [
                    "Hero Split (Image + Statement)",
                    "Full Bleed (Immersive Image)",
                    "Minimal Text (Words First)"
                ],
                "default": "Hero Split (Image + Statement)",
                "group": "homepage"
            },
            "homepage_image_ratio": {
                "type": "select",
                "options": [
                    "Portrait (4:5)",
                    "Square (1:1)",
                    "Landscape (16:10)"
                ],
                "default": "Portrait (4:5)",
                "group": "homepage"
            },
            "show_homepage_tagline": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "portfolio_layout": {
                "type": "select",
                "options": [
                    "Asymmetric Masonry",
                    "Uniform Grid",
                    "List View"
                ],
                "default": "Asymmetric Masonry",
                "group": "portfolio"
            },
            "portfolio_columns": {
                "type": "select",
                "options": [
                    "Two Columns",
                    "Three Columns",
                    "Dynamic"
                ],
                "default": "Dynamic",
                "group": "portfolio"
            },
            "show_portfolio_excerpts": {
                "type": "boolean",
                "default": true,
                "group": "portfolio"
            },
            "animation_style": {
                "type": "select",
                "options": [
                    "Subtle & Refined",
                    "Playful & Expressive",
                    "Minimal Motion"
                ],
                "default": "Subtle & Refined",
                "group": "effects"
            },
            "enable_grain_texture": {
                "type": "boolean",
                "default": true,
                "group": "effects"
            },
            "enable_glow_effects": {
                "type": "boolean",
                "default": true,
                "group": "effects"
            },
            "image_treatment": {
                "type": "select",
                "options": [
                    "Natural",
                    "Slight Warmth",
                    "High Contrast"
                ],
                "default": "Natural",
                "group": "effects"
            },
            "footer_style": {
                "type": "select",
                "options": [
                    "Minimal (Icons + Copyright)",
                    "Expanded (Links + Bio)",
                    "Hidden"
                ],
                "default": "Minimal (Icons + Copyright)",
                "group": "footer"
            },
            "climate_signature": {
                "type": "boolean",
                "default": false,
                "description": "Show 'Born at 366ppm COâ‚‚' signature in footer",
                "group": "footer"
            },
            "show_reading_progress": {
                "type": "boolean",
                "default": true,
                "group": "posts"
            },
            "post_header_style": {
                "type": "select",
                "options": [
                    "Centered Classic",
                    "Left Aligned",
                    "Full Bleed Image"
                ],
                "default": "Centered Classic",
                "group": "posts"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.2",
        "autoprefixer": "10.4.23",
        "beeper": "2.1.0",
        "cssnano": "7.1.2",
        "gscan": "5.2.1",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.6",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.3"
    }
}

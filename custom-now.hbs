{{!< default}}
{{!--
Template Name: Now
Description: A /now page - what you're focused on right now.
All content is editable through Ghost. Just write in the editor!
--}}

{{#post}}
<article class="now-layout {{post_class}}">
    <div class="now-container">
        <header class="now-header reveal-on-scroll">
            <h1 class="now-title kinetic-text">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="now-intro">{{custom_excerpt}}</p>
            {{/if}}
            <p class="now-updated">
                Last updated <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
            </p>
        </header>

        <div class="now-body gh-content reveal-on-scroll">
            {{content}}
        </div>
    </div>
</article>
{{/post}}

{{!< default}}
{{!--
Template Name: Split Layout
Description: Two-column layout with static image on right, scrollable content on left
--}}

{{#post}}
<article class="post-content split-layout {{post_class}}">

    <div class="split-container">
        {{!-- Left column: Scrollable content --}}
        <div class="split-content">
            <div class="split-content-inner">
                {{#match @page.show_title_and_feature_image}}
                    <header class="split-header">
                        <h1 class="split-title">{{title}}</h1>
                        {{#if custom_excerpt}}
                            <p class="split-excerpt">{{custom_excerpt}}</p>
                        {{/if}}
                    </header>
                {{/match}}

                <div class="split-body gh-content">
                    {{content}}
                </div>
            </div>
        </div>

        {{!-- Right column: Static/sticky image --}}
        <div class="split-image">
            {{#if feature_image}}
                <div class="split-image-container">
                    <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                </div>
            {{else}}
                {{!-- Fallback: Show a placeholder or color block if no feature image --}}
                <div class="split-image-placeholder">
                    <div class="split-placeholder-content">
                        <h2>{{title}}</h2>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>

</article>
{{/post}}
